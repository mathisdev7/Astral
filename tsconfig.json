{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext", "es5"],
    "target": "ES5",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "types": ["cypress"],
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "src/app/types/next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/lib/socket.ts",
    "src/components/ui/background.cjs",
    "src/lib/test.js"
  ],
  "exclude": ["node_modules"]
}
